# ── Voice Agent Environment Configuration ─────────────────────────────────
# Copy this file to .env and adjust values for your environment

# App
APP_NAME=Voice Agent
DEBUG=false

# Ollama (LLM + Embeddings)
OLLAMA_BASE_URL=http://localhost:11434   # Use http://ollama:11434 in Docker
OLLAMA_MODEL=llama3.2                    # Any model you have pulled
OLLAMA_EMBEDDING_MODEL=nomic-embed-text  # Embedding model
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=1024

# STT (Whisper)
# Models: tiny.en, base.en, small.en, medium.en, large-v3
WHISPER_MODEL=base.en
WHISPER_DEVICE=cpu          # Use "cuda" for GPU
WHISPER_COMPUTE_TYPE=int8   # int8 (CPU), float16 (GPU)
WHISPER_LANGUAGE=en

# TTS (Edge TTS - free, no API key)
TTS_VOICE=en-US-AriaNeural
TTS_RATE=+0%
TTS_PITCH=+0Hz
TTS_VOLUME=+0%

# Redis
REDIS_URL=redis://localhost:6379   # Use redis://redis:6379 in Docker

# RAG
FAISS_INDEX_PATH=./data/faiss_index
DOCUMENTS_PATH=./data/documents
RETRIEVAL_TOP_K=4
CHUNK_SIZE=512
CHUNK_OVERLAP=64

# Memory
MAX_CONVERSATION_TURNS=20
MEMORY_SUMMARY_THRESHOLD=15

# CORS
CORS_ORIGINS=["*"]
